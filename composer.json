{
    "name": "responsive-sk/slim4-paths",
    "version": "5.0.0",
    "description": "Complete path management solution for PHP applications with zero dependencies, built-in filesystem operations, enhanced security, framework presets (Laravel, Slim4, Mezzio), and comprehensive validation",
    "type": "library",
    "license": "MIT",
    "keywords": ["slim", "slim4", "laravel", "mezzio", "laminas", "paths", "php", "framework", "presets", "security", "sanitization", "validation", "filesystem", "zero-dependencies", "orbit", "cms", "path-traversal", "encoding-protection", "file-operations"],
    "authors": [
        {
            "name": "Responsive SK",
            "email": "info@responsive.sk"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "ResponsiveSk\\Slim4Paths\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ResponsiveSk\\Slim4Paths\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=max",
        "cs": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
